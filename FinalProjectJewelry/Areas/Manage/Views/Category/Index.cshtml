

@{ ViewData["Title"] = "Index";
    int counter = 1; }

@model List<Category>
    <div class="d-flex row">
        <div class="row justify-content-between mt-5">
            <div class="col-lg-3">
                <h1 class="h3 text-gray-800" style="color:wheat;">Category Page</h1>
            </div>
            <div class="col-lg-5">
                <a asp-area="manage" asp-controller="category" asp-action="create" class="btn btn-primary">Create</a>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>No</th>
                            <th>Image</th>
                            <th>Name</th>
                            <th>Setting</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Category category in Model)
                        {
                            <tr>
                                <td style="color:wheat">@counter</td>
                                <td width="75">
                                    <img style="width: 72px; height: 68px; margin-bottom:20px;" src="~/assest/img/category/@category.Image" alt="Alternate Text" />
                                </td>
                                <td style="color:wheat">@category.Name</td>
                                <td>
                                    <a class="btn btn-warning" asp-area="manage" asp-controller="category" asp-action="update" asp-route-id="@category.Id">Update</a>
                                    <a class="btn btn-danger" asp-area="manage" asp-controller="category" asp-action="delete" asp-route-id="@category.Id">Delete</a>
                                    <a class="btn btn-primary" asp-area="manage" asp-controller="category" asp-action="detail" asp-route-id="@category.Id">Detail</a>
                                </td>
                            </tr>counter++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>