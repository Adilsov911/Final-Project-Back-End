@model Setting
@{ ViewData["Title"] = "Update";
    IEnumerable<Setting> settings = ViewBag.Settings;
    SelectList selectListItems = new SelectList(settings, nameof(Setting.Id), nameof(Setting.Key)); }

<<div class="d-flex row">
    <div class="row justify-content-between mt-5">
        <div class="col-lg-3">
            <h1 class="h3 text-gray-800">Setting Update</h1>
        </div>

    </div>

    <div class="row">
        <div class="col-lg-12">
            <form method="post" enctype="multipart/form-data">

                <div class="form-group">
                    <label asp-for="Key"></label>
                    <input asp-for="Key" style="color: wheat;" class="form-control" placeholder="Name">
                    <span asp-validation-for="Key" class="text text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Value"></label>
                    <input asp-for="Value" style="color: wheat;" class="form-control" placeholder="Name">
                    <span asp-validation-for="Value" class="text text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Update</button>
            </form>
        </div>
    </div>
</div>
