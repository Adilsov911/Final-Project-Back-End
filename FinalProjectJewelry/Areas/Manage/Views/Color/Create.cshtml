@model Color
@{ ViewData["Title"] = "Update";
    IEnumerable<Color> colors = ViewBag.Colors;
    SelectList selectListItems = new SelectList(colors, nameof(Color.Id), nameof(Color.Name)); }



<div class="d-flex row">
    <div class="row justify-content-between mt-5">
        <div class="col-lg-3">
            <h1 class="h3 text-gray-800">Tag Creat</h1>
        </div>

    </div>

    <div class="row">
        <div class="col-lg-12">
            <form method="post" enctype="multipart/form-data">

                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" style="color:wheat" class="form-control" placeholder="Name">
                    <span asp-validation-for="Name" class="text text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Creat</button>
            </form>
        </div>
    </div>
</div>





