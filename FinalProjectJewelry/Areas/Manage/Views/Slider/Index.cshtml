

@{ ViewData["Title"] = "Index";
    int counter = 1; }

@model List<Slider>
<div class="d-flex row">
    <div class="row justify-content-between mt-5">
        <div class="col-lg-3">
            <h1 class="h3 text-gray-800">Category Page</h1>
        </div>
        <div class="col-lg-5">
            <a asp-area="manage" asp-controller="slider" asp-action="create" class="btn btn-primary">Create</a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>No</th>
                        <th>Image</th>
                        <th>Title Image</th>
                        <th>Setting</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Slider slider in Model)
                    {
                        <tr>
                            <td style="color:wheat">@counter</td>
                            <td width="50%" height="20%" style="border: none;">
                                <img style="width: 100%; border-radius: 0 0 0 0; height: 68px; margin-bottom: 20px;" src="~/assest/img/slider/@slider.Image" alt="Alternate Text" />
                            </td>
                            <td width="50%" height="20%" style="border: none; background-color: white; ">
                                <img style="width: 100%; border-radius:0 0 0 0;  height: 68px; margin-bottom:20px;" src="~/assest/img/slider/inslideimg/@slider.TitleImg" alt="Alternate Text" />
                            </td>

                            <td>
                                <a class="btn btn-warning" asp-area="manage" asp-controller="slider" asp-action="update" asp-route-id="@slider.Id">Update</a>
                                <a class="btn btn-danger" asp-area="manage" asp-controller="slider" asp-action="delete" asp-route-id="@slider.Id">Delete</a>
                                <a class="btn btn-primary" asp-area="manage" asp-controller="slider" asp-action="detail" asp-route-id="@slider.Id">Detail</a>
                            </td>
                        </tr>
                                counter++;
                     }
                </tbody>
            </table>
        </div>
    </div>
</div>