
@model ProfileVM

<div class="d-flex row">
    <div class="row justify-content-between mt-5">
        <div class="col-lg-3">
            <h1 class="h3 text-gray-800">User Update</h1>
        </div>

    </div>

    <div class="row">
        <div class="col-lg-12">
            <form method="post" enctype="multipart/form-data">

                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" style="color:wheat" class="form-control">
                    <span asp-validation-for="Name" class="text text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UserName"></label>
                    <input asp-for="UserName" style="color:wheat" class="form-control">
                    <span asp-validation-for="UserName" class="text text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" style="color:wheat" class="form-control" placeholder="Email">
                    <span asp-validation-for="Email" class="text text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CurrentPassword"></label>
                    <input asp-for="CurrentPassword" style="color:wheat" class="form-control" placeholder="CurrentPassword">
                    <span asp-validation-for="CurrentPassword" class="text text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NewPassword"></label>
                    <input asp-for="NewPassword" style="color:wheat" class="form-control" placeholder="Password">
                    <span asp-validation-for="NewPassword" class="text text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword"></label>
                    <input asp-for="ConfirmPassword" style="color:wheat" class="form-control" placeholder="ConfirmPassword">
                    <span asp-validation-for="ConfirmPassword" class="text text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Update</button>
            </form>
        </div>
    </div>
</div>